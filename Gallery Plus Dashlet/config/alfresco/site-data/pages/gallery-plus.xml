<?xml version='1.0' encoding='UTF-8'?>
<page>
	<title>Standalone Gallery Page</title>
	<description>Standalone Gallery Page</description>
	<template-instance>1-column</template-instance>
	<authentication>user</authentication>
	<components>

		<!-- Title -->
		<component>
			<region-id>title</region-id>
			<url>/components/title/simple-title</url>
			<properties>
				<title>Gallery Plus</title>
			</properties>
		</component>
		<!-- Gallery -->
		<component>
			<region-id>column</region-id>
			<url>/fme/components/standalone-gallery</url>
			<properties>
				<title>Gallery Plus</title>
				<viewmode>{viewmode}</viewmode>
				<album>{album}</album>
				<filterPath>{filterPath}</filterPath>
				<filterTags>{filterTags}</filterTags>
				<sort>{sort}</sort>
				<sortOrder>{sortOrder}</sortOrder>
				<pageSize>{pageSize}</pageSize>
				<maxImages>{maxImages}</maxImages>
				<background>{background}</background>
				<thumbName>{thumbName}</thumbName>
			</properties>			
		</component>
	</components>

</page>
